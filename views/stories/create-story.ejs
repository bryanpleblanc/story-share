<!-- HEADER -->
<% include ../partials/header %>



<div class="container text-center">
    <div class="row">
        <h1> Start a new story </h1>
        <div style="width:60%; margin: 0 auto;">
            <!-- POST form contents to /stories -->
            <form action="/show-stories" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="Author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Brief Description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="genre" placeholder="Genre">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
            <p>
                <a href ="/stories">Back to Stories</a>
            </p>
        </div>
    </div>
</div>





