<!-- HEADER -->
<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Chapters</p>
            <div class="list-group">
                <li class="list-group-item active">
                    Chapter 1
                </li>
                <li class="list-group-item">
                    Chapter 2
                </li>
                <li class="list-group-item">
                    Chapter 3
                </li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img id="story-image" class="image-responsive" src="<%=story.image%>">
                <div class="caption-full">
                    <h3 class="text-center"><%= story.title %></h3>
                    <p>
                        <%= story.description %>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/stories/<%= story._id %>/comments/new">Comment</a>
                </div>
                <hr>
                <% story.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author %>
                            <span class="pull-right"><%= comment.created.toDateString(); %></span>
                            <p> <%= comment.text %> </p>
                        </div>
                    </div>

                <% }); %>
            </div>
        </div>
    </div>
</div>
















