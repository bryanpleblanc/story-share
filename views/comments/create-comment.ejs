<!-- HEADER -->
<% include ../partials/header %>



<div class="container text-center">
    <div class="row">
        <h1> Add new comments to <%= story.title %>  </h1>
        <div style="width:60%; margin: 0 auto;">
            <!-- POST form contents to /stories -->
            <form action="/stories/<%= story._id %>/comments" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Commentor">
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Comment..." name="comment[text]"></textarea>
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
            <p>
                <a href="/stories/<%= story._id %>">Back to <strong><%= story.title %></strong></a>
            </p>
        </div>
    </div>

</div>





